{
  "defaultVersion": "latest",
  "defaultMirrors": [
    "https://releases.tapio.io",
    "https://github.com/tapio/tapio/releases/download"
  ],
  "retryAttempts": 3,
  "timeoutSeconds": 1800,
  "validationLevel": "full",
  "features": [
    "auto-update",
    "telemetry",
    "crash-reporting"
  ],
  "platformSettings": {
    "linux": {
      "installDir": "/usr/local/bin",
      "preferredPackageManager": "auto"
    },
    "darwin": {
      "installDir": "/usr/local/bin",
      "preferredPackageManager": "homebrew"
    },
    "windows": {
      "installDir": "%PROGRAMFILES%\\Tapio",
      "preferredPackageManager": "chocolatey"
    }
  }
}