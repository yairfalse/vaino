# WGO Environment Variables
# Copy to .env and customize for your environment

# Required for AI features
ANTHROPIC_API_KEY=your_claude_api_key_here

# Optional: Override data directory
WGO_DATA_DIR=/path/to/your/wgo/data

# AWS Configuration (if using AWS collector)
AWS_PROFILE=your_aws_profile
AWS_REGION=us-east-1

# Kubernetes Configuration
KUBECONFIG=/path/to/your/kubeconfig

# Git Configuration
GIT_AUTHOR_NAME="WGO Bot"
GIT_AUTHOR_EMAIL="wgo@yourcompany.com"

# Debug settings
WGO_DEBUG=false
WGO_VERBOSE=false

# Provider-specific settings
WGO_TERRAFORM_STATE_PATH=./terraform
WGO_AWS_REGIONS=us-east-1,us-west-2
WGO_K8S_CONTEXTS=production,staging